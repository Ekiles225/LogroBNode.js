        </div>
    </nav>
    <hr>

    {{#if errorMsg}}
    <div class="error-message">
        {{errorMsg}}
    </div>
    {{/if}}
  

<div class="container">
     <h1>INGRESO DE GENEROS</h1><br>
    <form action="/generos" method="POST">

        <div class="mb-3">
            <label class="form-label" for="nombre">Nombre:</label>
            <input class="form-control" type="text" id="nombre" name="nombre" required><br>
        </div>

         <button type="submit" class="btn btn-outline-info">guardar</button>

        {{#if mensaje}}
          <p>{{mensaje}}</p>
        {{/if}}
      <br>
      <br>
    </form>

 
 <h2>Lista de generos</h2>
  {{#if genero.length}}
    <table class="table table-success table-striped">
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Acciones</th>
      </tr>
    {{#each genero}}
        <tr>
           <td>{{this.nombre}}</td>
        
          <td>
            <form action="/generos/{{this.id}}?_method=DELETE" method="post" style="display:inline;">
              <button class="btn btn-outline-danger" type="submit">Eliminar</button>

            </form>
             <form action="/generos/{{this.id}}/edit" method="GET" style="display:inline;">
                 <button  class="btn btn-outline-info" type="submit">Edithar</button> 
            </form>
            </form>
          </td>
          
        </tr>
    {{/each}}
    </table>
 <p>Total de generos ingresados en el sistema: {{genero.length}}</p>

    <br>
    <br>
{{/if}}

</div>
  
</body>
</html>
